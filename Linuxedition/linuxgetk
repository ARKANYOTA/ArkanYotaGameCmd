def getmmmm():
    try:
        h = getch.getch()
        h = h.encode("UTF-8")
        return h
    except:
        exit()
def getkey():
    try:
        h = getmmmm()
        if h== b'\x1b':
            n = getch.getch()
            if n =="\x1b":
                return "h"
            else:
                m = getch.getch()
                if m=="1" or m=="2" or m=="3":
                    o = getch.getch()
                else:
                    o=""
                if str(n+m+o) in dict:
                    return dict[str(n+m+o)]
                
                return h,str(n+m+o)
        return h
    except:
        return "Ereur key"
