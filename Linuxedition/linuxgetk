dict = {
    "OP" : 'f1',
    "OQ" : 'f2',
    "OR" : 'f3',
    "OS" : 'f4',
    "[15" : 'f5',
    "[17" : 'f6',
    "[18" : 'f7',
    "[19" : 'f8',
    "[20" : 'f9',
    "[21" : 'f10',
    "[24" : 'f12',
    "[3~" : 'del',
    0x4f : 'end',
    "[B" : 'down',
    0x51 : 'pgdn',
    "[D" : 'left',
    "[C" : 'right',
    "\x1b" : 'esc',
    "[A" : 'up',
    0x49 : 'pgup'
}
