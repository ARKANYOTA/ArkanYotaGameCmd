import getch

def getc():
    n = ord(ctypes.c_char(getch.getch()).value)
    try:
        c = chr(n)
    except:
        c = '\0'
    return (n, c)

def getkey():
    n, c = getc()
    # 0xE0 is 'grey' keys.  change this if you don't like 
    # it, but I don't care what color the key is.  IMHO it
    # just confuses the end-user if they need to know.
    if n == 0 or n == 0xE0:
        n, c = getc()
        if n in __keydict:
            return __keydict[n]
        return "key%x" % n
    return c
